<div class= "w-full max-w-xs m-auto text-center my-5">
  <h1 class="text-orange-600 text-4xl uppercase">Edit <%= current_user.username %></h1>
</div>

<div class="w-full max-w-xs m-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'bg-white shadow-2xl rounded px-8 pt-6 pb-8 mb-4'}) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :username, :class => 'form-text my-3' %>
    <%= f.text_field :username, autofocus: true, autocomplete: "email", class: 'input-form' %>
  </div>

  <div class="mb-4">
    <%= f.label :email, :class => 'form-text my-3' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-form' %>
  </div>

  <div class="mb-4">
    <%= f.label :password, :class => 'form-text my-1' %>
    <% if @minimum_password_length %>
    <em class="text-sm text-orange-500">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'input-form', placeholder: "******************" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, :class => 'form-text my-3' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input-form', placeholder: "******************" %>
  </div>

  <div class="flex items-center justify-between">
    <div class="actions">
      <%= f.submit "Update", class: "btn-orange" %>
    </div>
    <div class="inline-block align-baseline font-bold text-sm text-orange-500 hover:text-orange-900">
      <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
    </div>
    
  </div>
</div>
<% end %>